<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 
    ═══════════════════════════════════════════════════════════════════════════════
    Munin IRC Client - Professional Dark Theme Color Palette
    Inspired by modern dark themes with subtle depth and visual hierarchy
    ═══════════════════════════════════════════════════════════════════════════════
    -->

    <!-- Base Color Palette -->
    <Color x:Key="BackgroundDarkColor">#0D1117</Color>
    <Color x:Key="BackgroundMediumColor">#161B22</Color>
    <Color x:Key="BackgroundLightColor">#21262D</Color>
    <Color x:Key="BackgroundHighlightColor">#30363D</Color>
    <Color x:Key="BackgroundElevatedColor">#1C2128</Color>
    <Color x:Key="BackgroundOverlayColor">#0D1117</Color>
    
    <!-- Border Colors -->
    <Color x:Key="BorderColor">#30363D</Color>
    <Color x:Key="BorderLightColor">#484F58</Color>
    <Color x:Key="BorderSubtleColor">#21262D</Color>
    <Color x:Key="BorderFocusColor">#58A6FF</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#F0F6FC</Color>
    <Color x:Key="TextSecondaryColor">#8B949E</Color>
    <Color x:Key="TextMutedColor">#6E7681</Color>
    <Color x:Key="TextDisabledColor">#484F58</Color>
    
    <!-- Accent Colors - Blue -->
    <Color x:Key="AccentColor">#58A6FF</Color>
    <Color x:Key="AccentHoverColor">#79B8FF</Color>
    <Color x:Key="AccentDimColor">#1F6FEB</Color>
    <Color x:Key="AccentSubtleColor">#1A3A5C</Color>
    <Color x:Key="AccentGlowColor">#58A6FF</Color>
    
    <!-- Semantic Colors -->
    <Color x:Key="SuccessColor">#3FB950</Color>
    <Color x:Key="SuccessDimColor">#238636</Color>
    <Color x:Key="SuccessSubtleColor">#1B4721</Color>
    
    <Color x:Key="WarningColor">#D29922</Color>
    <Color x:Key="WarningDimColor">#9E6A03</Color>
    <Color x:Key="WarningSubtleColor">#3D2E00</Color>
    
    <Color x:Key="ErrorColor">#F85149</Color>
    <Color x:Key="ErrorDimColor">#DA3633</Color>
    <Color x:Key="ErrorSubtleColor">#490202</Color>
    
    <Color x:Key="InfoColor">#58A6FF</Color>
    
    <!-- Mention/Highlight Colors -->
    <Color x:Key="MentionBackgroundColor">#2D2A1A</Color>
    <Color x:Key="MentionBorderColor">#6E5F00</Color>
    
    <!-- Zebra Stripe Color (very subtle) -->
    <Color x:Key="ZebraStripeColor">#0A0E14</Color>
    
    <!-- ═══════════════════════════════════════════════════════════════════════════════
         Solid Color Brushes
         ═══════════════════════════════════════════════════════════════════════════════ -->
    
    <!-- Background Brushes -->
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDarkColor}"/>
    <SolidColorBrush x:Key="BackgroundMediumBrush" Color="{StaticResource BackgroundMediumColor}"/>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLightColor}"/>
    <SolidColorBrush x:Key="BackgroundHighlightBrush" Color="{StaticResource BackgroundHighlightColor}"/>
    <SolidColorBrush x:Key="BackgroundElevatedBrush" Color="{StaticResource BackgroundElevatedColor}"/>
    <SolidColorBrush x:Key="BackgroundOverlayBrush" Color="{StaticResource BackgroundOverlayColor}"/>
    
    <!-- Border Brushes -->
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderLightColor}"/>
    <SolidColorBrush x:Key="BorderSubtleBrush" Color="{StaticResource BorderSubtleColor}"/>
    <SolidColorBrush x:Key="BorderFocusBrush" Color="{StaticResource BorderFocusColor}"/>
    
    <!-- Text Brushes -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMutedColor}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabledColor}"/>
    
    <!-- Accent Brushes -->
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHoverColor}"/>
    <SolidColorBrush x:Key="AccentDimBrush" Color="{StaticResource AccentDimColor}"/>
    <SolidColorBrush x:Key="AccentSubtleBrush" Color="{StaticResource AccentSubtleColor}"/>
    
    <!-- Semantic Brushes -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="SuccessDimBrush" Color="{StaticResource SuccessDimColor}"/>
    <SolidColorBrush x:Key="SuccessSubtleBrush" Color="{StaticResource SuccessSubtleColor}"/>
    
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="WarningDimBrush" Color="{StaticResource WarningDimColor}"/>
    <SolidColorBrush x:Key="WarningSubtleBrush" Color="{StaticResource WarningSubtleColor}"/>
    
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="ErrorDimBrush" Color="{StaticResource ErrorDimColor}"/>
    <SolidColorBrush x:Key="ErrorSubtleBrush" Color="{StaticResource ErrorSubtleColor}"/>
    
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    
    <SolidColorBrush x:Key="MentionBackgroundBrush" Color="{StaticResource MentionBackgroundColor}"/>
    <SolidColorBrush x:Key="MentionBorderBrush" Color="{StaticResource MentionBorderColor}"/>
    
    <!-- Zebra stripe brush for alternating row backgrounds -->
    <SolidColorBrush x:Key="ZebraStripeBrush" Color="{StaticResource ZebraStripeColor}"/>

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         Gradient Brushes for Elevated Surfaces
         ═══════════════════════════════════════════════════════════════════════════════ -->
    
    <!-- Subtle vertical gradient for header/title bar -->
    <LinearGradientBrush x:Key="HeaderGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#1C2128" Offset="0"/>
        <GradientStop Color="#161B22" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Sidebar gradient -->
    <LinearGradientBrush x:Key="SidebarGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#161B22" Offset="0"/>
        <GradientStop Color="#151A21" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Button hover gradient -->
    <LinearGradientBrush x:Key="AccentButtonGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#2E7EE8" Offset="0"/>
        <GradientStop Color="#1F6FEB" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="AccentButtonHoverGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#4A9AFF" Offset="0"/>
        <GradientStop Color="#2E7EE8" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Status bar gradient -->
    <LinearGradientBrush x:Key="StatusBarGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#161B22" Offset="0"/>
        <GradientStop Color="#13171D" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Chat area subtle radial gradient for depth -->
    <RadialGradientBrush x:Key="ChatAreaBackgroundBrush" 
                         GradientOrigin="0.5,0" 
                         Center="0.5,0" 
                         RadiusX="1.5" 
                         RadiusY="1.2">
        <GradientStop Color="#12171E" Offset="0"/>
        <GradientStop Color="#0D1117" Offset="1"/>
    </RadialGradientBrush>
    
    <!-- Welcome panel gradient -->
    <LinearGradientBrush x:Key="WelcomeGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0D1117" Offset="0"/>
        <GradientStop Color="#131920" Offset="0.5"/>
        <GradientStop Color="#0D1117" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Server Rail gradient (darker for Discord-style) -->
    <LinearGradientBrush x:Key="ServerRailGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#0B0E12" Offset="0"/>
        <GradientStop Color="#080A0D" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Server Rail Colors -->
    <Color x:Key="ServerRailBackgroundColor">#0B0E12</Color>
    <SolidColorBrush x:Key="ServerRailBackgroundBrush" Color="{StaticResource ServerRailBackgroundColor}"/>
    <SolidColorBrush x:Key="ServerIconHoverBrush" Color="#3BA55D"/>
    <SolidColorBrush x:Key="ServerIconActiveBrush" Color="#5865F2"/>

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         Drop Shadow Effects
         ═══════════════════════════════════════════════════════════════════════════════ -->
    
    <DropShadowEffect x:Key="SubtleShadow" 
                      BlurRadius="8" 
                      ShadowDepth="2" 
                      Direction="270" 
                      Color="#000000" 
                      Opacity="0.3"/>
    
    <DropShadowEffect x:Key="MediumShadow" 
                      BlurRadius="16" 
                      ShadowDepth="4" 
                      Direction="270" 
                      Color="#000000" 
                      Opacity="0.4"/>
    
    <DropShadowEffect x:Key="ElevatedShadow" 
                      BlurRadius="24" 
                      ShadowDepth="8" 
                      Direction="270" 
                      Color="#000000" 
                      Opacity="0.5"/>
    
    <DropShadowEffect x:Key="GlowEffect" 
                      BlurRadius="12" 
                      ShadowDepth="0" 
                      Direction="0" 
                      Color="{StaticResource AccentGlowColor}" 
                      Opacity="0.4"/>

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         Brush Aliases for consistency
         ═══════════════════════════════════════════════════════════════════════════════ -->
    
    <!-- Window and Container Backgrounds -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource BackgroundDarkColor}"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="{StaticResource BackgroundMediumColor}"/>
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="{StaticResource BackgroundMediumColor}"/>
    <SolidColorBrush x:Key="EditorBackgroundBrush" Color="{StaticResource BackgroundDarkColor}"/>
    
    <!-- Text Aliases -->
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="PlaceholderForegroundBrush" Color="{StaticResource TextMutedColor}"/>

</ResourceDictionary>
