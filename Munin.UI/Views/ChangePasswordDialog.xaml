<Window x:Class="Munin.UI.Views.ChangePasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:Munin.UI.Localization"
        Title="{loc:Localize Key=ChangePassword_Title}" 
        Height="320" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1e1e1e">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="#2d2d2d"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="BorderBrush" Value="#3d3d3d"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#0078d4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="{loc:Localize Key=ChangePassword_Title}" FontSize="18" FontWeight="SemiBold" 
                   Margin="0,0,0,20"/>
        
        <!-- Password fields -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="{loc:Localize Key=ChangePassword_CurrentPassword}" Margin="0,0,0,5"/>
            <PasswordBox x:Name="CurrentPasswordBox" Margin="0,0,0,15"/>
            
            <TextBlock Text="{loc:Localize Key=ChangePassword_NewPassword}" Margin="0,0,0,5"/>
            <PasswordBox x:Name="NewPasswordBox" Margin="0,0,0,15"/>
            
            <TextBlock Text="{loc:Localize Key=ChangePassword_ConfirmNewPassword}" Margin="0,0,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,10"/>
            
            <TextBlock x:Name="ErrorText" Foreground="#ff6b6b" Text="" Visibility="Collapsed"/>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="{loc:Localize Key=Cancel}" Click="CancelButton_Click" Background="#444" Margin="0,0,10,0"/>
            <Button Content="{loc:Localize Key=ChangePassword_Button}" Click="ChangeButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
