<Window x:Class="Munin.UI.Views.ChangePasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:Munin.UI.Localization"
        Title="{loc:Localize Key=ChangePassword_Title}" 
        Height="380" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundDarkBrush}"
        FontFamily="{StaticResource UIFont}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource BackgroundMediumBrush}"
                BorderBrush="{DynamicResource BorderSubtleBrush}"
                BorderThickness="0,0,0,1"
                Padding="20,16">
            <StackPanel Orientation="Horizontal">
                <Border Width="36" Height="36" 
                        CornerRadius="8"
                        Background="{DynamicResource AccentSubtleBrush}"
                        Margin="0,0,14,0">
                    <TextBlock Text="ðŸ”‘" FontSize="18" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="{loc:Localize Key=ChangePassword_Title}" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Password fields -->
        <Border Grid.Row="1" 
                Background="{DynamicResource BackgroundElevatedBrush}"
                CornerRadius="8"
                Margin="20,16,20,0"
                Padding="16">
            <StackPanel>
                <TextBlock Text="{loc:Localize Key=ChangePassword_CurrentPassword}" 
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="12"
                           Margin="0,0,0,6"/>
                <PasswordBox x:Name="CurrentPasswordBox" Margin="0,0,0,16"/>
                
                <TextBlock Text="{loc:Localize Key=ChangePassword_NewPassword}" 
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="12"
                           Margin="0,0,0,6"/>
                <PasswordBox x:Name="NewPasswordBox" Margin="0,0,0,16"/>
                
                <TextBlock Text="{loc:Localize Key=ChangePassword_ConfirmNewPassword}" 
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="12"
                           Margin="0,0,0,6"/>
                <PasswordBox x:Name="ConfirmPasswordBox"/>
                
                <TextBlock x:Name="ErrorText" 
                           Foreground="{DynamicResource ErrorBrush}" 
                           Text="" 
                           Visibility="Collapsed"
                           Margin="0,12,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Buttons -->
        <Border Grid.Row="2"
                BorderBrush="{DynamicResource BorderSubtleBrush}"
                BorderThickness="0,1,0,0"
                Margin="0,16,0,0"
                Padding="20,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="{loc:Localize Key=Cancel}" Click="CancelButton_Click" Padding="20,10" Margin="0,0,12,0"/>
                <Button Content="{loc:Localize Key=ChangePassword_Button}" Click="ChangeButton_Click" Style="{StaticResource AccentButtonStyle}" Padding="20,10"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
