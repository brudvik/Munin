<Window x:Class="Munin.UI.Views.UnlockDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:Munin.UI.Resources"
        Title="{x:Static res:Strings.Unlock_Title}" 
        Height="420" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1e1e1e">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="#2d2d2d"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="BorderBrush" Value="#3d3d3d"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#0078d4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ”" FontSize="48" HorizontalAlignment="Center"/>
            <TextBlock Text="{x:Static res:Strings.Unlock_Header}" FontSize="18" FontWeight="SemiBold" 
                       HorizontalAlignment="Center" Margin="0,10,0,5"/>
            <TextBlock Text="{x:Static res:Strings.Unlock_Description}" 
                       HorizontalAlignment="Center" Foreground="#888"/>
        </StackPanel>
        
        <!-- Password field -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="{x:Static res:Strings.Unlock_MasterPassword}" Margin="0,0,0,8"/>
            <PasswordBox x:Name="PasswordBox" KeyDown="PasswordBox_KeyDown"/>
            
            <TextBlock x:Name="ErrorText" Foreground="#ff6b6b" Text="" Margin="0,10,0,0" 
                       Visibility="Collapsed"/>
            
            <TextBlock x:Name="AttemptsText" Foreground="#888" Text="" Margin="0,5,0,0" 
                       Visibility="Collapsed" FontSize="11"/>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="UnlockButton" Content="{x:Static res:Strings.Unlock_Button}" Click="UnlockButton_Click" Width="120"/>
        </StackPanel>
        
        <!-- Reset link -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <TextBlock Text="{x:Static res:Strings.Unlock_ForgotPassword}" Foreground="#888" FontSize="11"/>
            <TextBlock x:Name="ResetLink" Text="{x:Static res:Strings.Unlock_ResetAll}" Foreground="#0078d4" FontSize="11" 
                       Cursor="Hand" MouseLeftButtonUp="ResetLink_Click"
                       TextDecorations="Underline" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
