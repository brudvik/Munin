<Window x:Class="Munin.UI.Views.UnlockDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:Munin.UI.Resources"
        Title="{x:Static res:Strings.Unlock_Title}" 
        Height="520" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundDarkBrush}"
        FontFamily="{StaticResource UIFont}"
        SizeToContent="Height">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource BackgroundMediumBrush}"
                Padding="30,20">
            <StackPanel HorizontalAlignment="Center">
                <Border Width="56" Height="56" 
                        CornerRadius="28"
                        Background="{DynamicResource AccentSubtleBrush}"
                        Margin="0,0,0,14">
                    <TextBlock Text="ðŸ”" FontSize="24" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="{x:Static res:Strings.Unlock_Header}" 
                           FontSize="17" 
                           FontWeight="SemiBold" 
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{x:Static res:Strings.Unlock_Description}" 
                           HorizontalAlignment="Center" 
                           Foreground="{DynamicResource TextMutedBrush}"
                           FontSize="12"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Password field -->
        <Border Grid.Row="1" 
                Background="{DynamicResource BackgroundElevatedBrush}"
                CornerRadius="8"
                Margin="30,16,30,0"
                Padding="16">
            <StackPanel>
                <TextBlock Text="{x:Static res:Strings.Unlock_MasterPassword}" 
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="12"
                           Margin="0,0,0,6"/>
                <PasswordBox x:Name="PasswordBox" KeyDown="PasswordBox_KeyDown"/>
                
                <TextBlock x:Name="ErrorText" 
                           Foreground="{DynamicResource ErrorBrush}" 
                           Text="" 
                           Margin="0,10,0,0" 
                           Visibility="Collapsed"/>
                
                <TextBlock x:Name="AttemptsText" 
                           Foreground="{DynamicResource TextMutedBrush}" 
                           Text="" 
                           Margin="0,4,0,0" 
                           Visibility="Collapsed" 
                           FontSize="11"/>
            </StackPanel>
        </Border>
        
        <!-- Buttons -->
        <Border Grid.Row="2"
                BorderBrush="{DynamicResource BorderSubtleBrush}"
                BorderThickness="0,1,0,0"
                Margin="0,16,0,0"
                Padding="30,16">
            <Button x:Name="UnlockButton" 
                    Content="{x:Static res:Strings.Unlock_Button}" 
                    Click="UnlockButton_Click" 
                    Style="{StaticResource AccentButtonStyle}"
                    HorizontalAlignment="Center"
                    Padding="40,10"/>
        </Border>
        
        <!-- Reset link -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20,0,20,16">
            <TextBlock Text="{x:Static res:Strings.Unlock_ForgotPassword}" 
                       Foreground="{DynamicResource TextMutedBrush}" 
                       FontSize="12"/>
            <TextBlock x:Name="ResetLink" 
                       Text="{x:Static res:Strings.Unlock_ResetAll}" 
                       Foreground="{DynamicResource AccentBrush}" 
                       FontSize="12" 
                       Cursor="Hand" 
                       MouseLeftButtonUp="ResetLink_Click"
                       TextDecorations="Underline" 
                       Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
