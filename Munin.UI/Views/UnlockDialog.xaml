<Window x:Class="Munin.UI.Views.UnlockDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:Munin.UI.Resources"
        xmlns:loc="clr-namespace:Munin.UI.Localization"
        Title="{x:Static res:Strings.Unlock_Title}" 
        Height="520" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="{StaticResource UIFont}"
        SizeToContent="Height"
        Icon="/Resources/munin-icon.ico">
    
    <Border Background="{DynamicResource BackgroundDarkBrush}"
            CornerRadius="8"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Custom Title Bar -->
            <Border Grid.Row="0" 
                    Background="{StaticResource BackgroundMediumBrush}"
                    CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="38">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Center">
                        <Image Source="/Resources/munin-logo.png" Width="18" Height="18" VerticalAlignment="Center" Margin="0,0,8,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <TextBlock Text="{x:Static res:Strings.Unlock_Title}" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1" 
                            Click="CloseButton_Click"
                            Style="{StaticResource WindowCloseButtonStyle}"
                            ToolTip="{loc:Localize Key=MainWindow_Close}">
                        <Path Data="M0,0 L10,10 M10,0 L0,10" 
                              Stroke="{StaticResource TextSecondaryBrush}" 
                              StrokeThickness="1"
                              Width="10" Height="10"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"/>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Header -->
            <Border Grid.Row="1" 
                    Background="{DynamicResource BackgroundMediumBrush}"
                    Padding="30,20">
                <StackPanel HorizontalAlignment="Center">
                    <Border Width="64" Height="64" 
                            CornerRadius="32"
                            Background="{DynamicResource AccentSubtleBrush}"
                            Margin="0,0,0,14">
                        <Image Source="/Resources/munin-logo.png" 
                               Width="40" Height="40" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Border>
                    <TextBlock Text="{x:Static res:Strings.Unlock_Header}" 
                               FontSize="17" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{x:Static res:Strings.Unlock_Description}" 
                               HorizontalAlignment="Center" 
                               Foreground="{DynamicResource TextMutedBrush}"
                               FontSize="12"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Password field -->
            <Border Grid.Row="2" 
                    Background="{DynamicResource BackgroundElevatedBrush}"
                    CornerRadius="8"
                    Margin="30,16,30,0"
                    Padding="16">
                <StackPanel>
                    <TextBlock Text="{x:Static res:Strings.Unlock_MasterPassword}" 
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontSize="12"
                               Margin="0,0,0,6"/>
                    <PasswordBox x:Name="PasswordBox" KeyDown="PasswordBox_KeyDown"/>
                    
                    <TextBlock x:Name="ErrorText" 
                               Foreground="{DynamicResource ErrorBrush}" 
                               Text="" 
                               Margin="0,10,0,0" 
                               Visibility="Collapsed"/>
                    
                    <TextBlock x:Name="AttemptsText" 
                               Foreground="{DynamicResource TextMutedBrush}" 
                               Text="" 
                               Margin="0,4,0,0" 
                               Visibility="Collapsed" 
                               FontSize="11"/>
                </StackPanel>
            </Border>
            
            <!-- Buttons -->
            <Border Grid.Row="3"
                    BorderBrush="{DynamicResource BorderSubtleBrush}"
                    BorderThickness="0,1,0,0"
                    Margin="0,16,0,0"
                    Padding="30,16">
                <Button x:Name="UnlockButton" 
                        Content="{x:Static res:Strings.Unlock_Button}" 
                        Click="UnlockButton_Click" 
                        Style="{StaticResource AccentButtonStyle}"
                        HorizontalAlignment="Center"
                        Padding="40,10"/>
            </Border>
            
            <!-- Reset link -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20,0,20,16">
                <TextBlock Text="{x:Static res:Strings.Unlock_ForgotPassword}" 
                           Foreground="{DynamicResource TextMutedBrush}" 
                           FontSize="12"/>
                <TextBlock x:Name="ResetLink" 
                           Text="{x:Static res:Strings.Unlock_ResetAll}" 
                           Foreground="{DynamicResource AccentBrush}" 
                           FontSize="12" 
                           Cursor="Hand" 
                           MouseLeftButtonUp="ResetLink_Click"
                           TextDecorations="Underline" 
                           Margin="5,0,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
