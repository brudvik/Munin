<Window x:Class="Munin.UI.Views.SecurityLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:Munin.UI.Localization"
        Title="{loc:Localize Key=SecurityLog_Title}"
        Height="450"
        Width="650"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundDarkBrush}"
        Foreground="{StaticResource TextPrimaryBrush}"
        FontFamily="{StaticResource MonospaceFont}"
        FontSize="13">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="{loc:Localize Key=SecurityLog_Title}" 
                       FontSize="18" 
                       FontWeight="SemiBold"/>
            <TextBlock Text="{loc:Localize Key=SecurityLog_Description}" 
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Event List -->
        <DataGrid Grid.Row="1" 
                  x:Name="EventsDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  Background="{StaticResource BackgroundDarkBrush}"
                  Foreground="{StaticResource TextPrimaryBrush}"
                  BorderBrush="{StaticResource BorderBrush}"
                  RowBackground="{StaticResource BackgroundDarkBrush}"
                  AlternatingRowBackground="{StaticResource BackgroundLightBrush}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{loc:Localize Key=SecurityLog_Time}" 
                                    Binding="{Binding Timestamp, StringFormat='{}{0:dd.MM.yyyy HH:mm:ss}'}" 
                                    Width="140"/>
                <DataGridTextColumn Header="{loc:Localize Key=SecurityLog_Status}" 
                                    Binding="{Binding StatusIcon}" 
                                    Width="50"/>
                <DataGridTextColumn Header="{loc:Localize Key=SecurityLog_Event}" 
                                    Binding="{Binding Description}" 
                                    Width="*"/>
                <DataGridTextColumn Header="{loc:Localize Key=SecurityLog_Machine}" 
                                    Binding="{Binding MachineName}" 
                                    Width="100"/>
                <DataGridTextColumn Header="{loc:Localize Key=SecurityLog_User}" 
                                    Binding="{Binding UserName}" 
                                    Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="{loc:Localize Key=SecurityLog_Refresh}" 
                    Click="RefreshButton_Click"
                    Width="100"
                    Margin="0,0,12,0"/>
            <Button Content="{loc:Localize Key=Close}" 
                    Click="CloseButton_Click"
                    Width="100"/>
        </StackPanel>
    </Grid>
</Window>
