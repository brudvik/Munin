<Window x:Class="Munin.UI.Views.ChannelModeEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:Munin.UI.Localization"
        Title="{loc:Localize Key=ChannelModeEditor_Title}"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundPrimaryBrush}"
        Width="450" Height="480"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Window.Resources>
        <Style x:Key="ModeToggleStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Border BorderBrush="{DynamicResource BorderSubtleBrush}" 
            BorderThickness="1" 
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource BackgroundSecondaryBrush}"
                    CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="{loc:Localize Key=ChannelModeEditor_Title}"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="16,0"/>
                    <Button Content="âœ•" 
                            HorizontalAlignment="Right"
                            Width="40" Height="40"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="{DynamicResource TextMutedBrush}"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>
                    <!-- Channel name -->
                    <TextBlock x:Name="ChannelNameText"
                               Text="#channel"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               Margin="0,0,0,16"/>

                    <!-- Current modes -->
                    <TextBlock Text="{loc:Localize Key=ChannelModeEditor_CurrentModes}"
                               Foreground="{DynamicResource TextMutedBrush}"
                               FontSize="12"
                               Margin="0,0,0,4"/>
                    <TextBlock x:Name="CurrentModesText"
                               Text="+nts"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontFamily="Consolas"
                               Margin="0,0,0,16"/>

                    <!-- Simple modes -->
                    <TextBlock Text="{loc:Localize Key=ChannelModeEditor_SimpleModes}"
                               Foreground="{DynamicResource AccentBrush}"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <CheckBox x:Name="ModeN" Style="{StaticResource ModeToggleStyle}">
                        <TextBlock>
                            <Run Text="+n" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                            <Run Text=" - " Foreground="{DynamicResource TextMutedBrush}"/>
                            <Run Text="{loc:Localize Key=ChannelModeEditor_Mode_N}"/>
                        </TextBlock>
                    </CheckBox>

                    <CheckBox x:Name="ModeT" Style="{StaticResource ModeToggleStyle}">
                        <TextBlock>
                            <Run Text="+t" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                            <Run Text=" - " Foreground="{DynamicResource TextMutedBrush}"/>
                            <Run Text="{loc:Localize Key=ChannelModeEditor_Mode_T}"/>
                        </TextBlock>
                    </CheckBox>

                    <CheckBox x:Name="ModeS" Style="{StaticResource ModeToggleStyle}">
                        <TextBlock>
                            <Run Text="+s" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                            <Run Text=" - " Foreground="{DynamicResource TextMutedBrush}"/>
                            <Run Text="{loc:Localize Key=ChannelModeEditor_Mode_S}"/>
                        </TextBlock>
                    </CheckBox>

                    <CheckBox x:Name="ModeM" Style="{StaticResource ModeToggleStyle}">
                        <TextBlock>
                            <Run Text="+m" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                            <Run Text=" - " Foreground="{DynamicResource TextMutedBrush}"/>
                            <Run Text="{loc:Localize Key=ChannelModeEditor_Mode_M}"/>
                        </TextBlock>
                    </CheckBox>

                    <CheckBox x:Name="ModeI" Style="{StaticResource ModeToggleStyle}">
                        <TextBlock>
                            <Run Text="+i" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                            <Run Text=" - " Foreground="{DynamicResource TextMutedBrush}"/>
                            <Run Text="{loc:Localize Key=ChannelModeEditor_Mode_I}"/>
                        </TextBlock>
                    </CheckBox>

                    <CheckBox x:Name="ModeP" Style="{StaticResource ModeToggleStyle}">
                        <TextBlock>
                            <Run Text="+p" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                            <Run Text=" - " Foreground="{DynamicResource TextMutedBrush}"/>
                            <Run Text="{loc:Localize Key=ChannelModeEditor_Mode_P}"/>
                        </TextBlock>
                    </CheckBox>

                    <!-- Parameter modes -->
                    <TextBlock Text="{loc:Localize Key=ChannelModeEditor_ParameterModes}"
                               Foreground="{DynamicResource AccentBrush}"
                               FontWeight="SemiBold"
                               Margin="0,16,0,8"/>

                    <!-- Channel Key (+k) -->
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox x:Name="ModeK" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,0"
                                  Checked="ModeK_Changed" Unchecked="ModeK_Changed"/>
                        <TextBlock Grid.Column="0" Margin="24,0,0,0" VerticalAlignment="Center">
                            <Run Text="+k" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                            <Run Text=" - " Foreground="{DynamicResource TextMutedBrush}"/>
                            <Run Text="{loc:Localize Key=ChannelModeEditor_Mode_K}"/>
                        </TextBlock>
                    </Grid>
                    <TextBox x:Name="KeyInput" 
                             Margin="24,4,0,0"
                             Background="{DynamicResource BackgroundSecondaryBrush}"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             BorderBrush="{DynamicResource BorderSubtleBrush}"
                             Padding="8,6"
                             IsEnabled="{Binding IsChecked, ElementName=ModeK}"/>

                    <!-- Channel Limit (+l) -->
                    <Grid Margin="0,8,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox x:Name="ModeL" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,0"
                                  Checked="ModeL_Changed" Unchecked="ModeL_Changed"/>
                        <TextBlock Grid.Column="0" Margin="24,0,0,0" VerticalAlignment="Center">
                            <Run Text="+l" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                            <Run Text=" - " Foreground="{DynamicResource TextMutedBrush}"/>
                            <Run Text="{loc:Localize Key=ChannelModeEditor_Mode_L}"/>
                        </TextBlock>
                    </Grid>
                    <TextBox x:Name="LimitInput" 
                             Margin="24,4,0,0"
                             Width="100"
                             HorizontalAlignment="Left"
                             Background="{DynamicResource BackgroundSecondaryBrush}"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             BorderBrush="{DynamicResource BorderSubtleBrush}"
                             Padding="8,6"
                             IsEnabled="{Binding IsChecked, ElementName=ModeL}"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <Border Grid.Row="2" 
                    Background="{DynamicResource BackgroundSecondaryBrush}"
                    Padding="20,12"
                    CornerRadius="0,0,8,8">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="{loc:Localize Key=Dialog_Cancel}"
                            Width="80"
                            Padding="16,8"
                            Margin="0,0,8,0"
                            Background="Transparent"
                            BorderBrush="{DynamicResource BorderSubtleBrush}"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            Click="CancelButton_Click"/>
                    <Button Content="{loc:Localize Key=Dialog_Apply}"
                            Width="80"
                            Padding="16,8"
                            Background="{DynamicResource AccentBrush}"
                            Foreground="White"
                            BorderThickness="0"
                            Click="ApplyButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
