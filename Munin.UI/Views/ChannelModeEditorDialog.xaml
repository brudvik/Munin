<Window x:Class="Munin.UI.Views.ChannelModeEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:Munin.UI.Localization"
        Title="{loc:Localize Key=ChannelModeEditor_Title}"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Background="Transparent"
        Foreground="{StaticResource TextPrimaryBrush}"
        FontFamily="{StaticResource UIFont}"
        FontSize="13"
        Width="480" Height="580"
        WindowStyle="None"
        AllowsTransparency="True"
        Icon="/Resources/munin-icon.ico">
    
    <Window.Resources>
        <Style x:Key="ModeToggleStyle" TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="ModeTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Background" Value="{StaticResource BackgroundMediumBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CaretBrush" Value="{StaticResource TextPrimaryBrush}"/>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundDarkBrush}"
            CornerRadius="8"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" 
                    Background="{StaticResource BackgroundMediumBrush}"
                    CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="38">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="⚙️" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{loc:Localize Key=ChannelModeEditor_Title}" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1" 
                            Click="CloseButton_Click"
                            Style="{StaticResource WindowCloseButtonStyle}"
                            ToolTip="{loc:Localize Key=MainWindow_Close}">
                        <Path Data="M0,0 L10,10 M10,0 L0,10" 
                              Stroke="{StaticResource TextSecondaryBrush}" 
                              StrokeThickness="1"
                              Width="10" Height="10"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Header -->
            <StackPanel Grid.Row="1" Margin="28,20,28,16">
                <StackPanel Orientation="Horizontal">
                    <Border Background="{StaticResource AccentSubtleBrush}"
                            CornerRadius="8"
                            Padding="10,8"
                            Margin="0,0,14,0">
                        <TextBlock Text="#️⃣" FontSize="20"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="ChannelNameText"
                                   Text="#channel" 
                                   FontSize="20" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="{loc:Localize Key=ChannelModeEditor_CurrentModes}" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="12"/>
                            <TextBlock x:Name="CurrentModesText"
                                       Text="+nts"
                                       Foreground="{StaticResource AccentBrush}"
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Margin="6,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- Content -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="28,0,28,20">
                    
                    <!-- Simple modes section -->
                    <Border Background="{StaticResource BackgroundMediumBrush}"
                            CornerRadius="6"
                            Padding="16,12"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="{loc:Localize Key=ChannelModeEditor_SimpleModes}"
                                       Foreground="{StaticResource AccentBrush}"
                                       FontWeight="SemiBold"
                                       FontSize="12"
                                       Margin="0,0,0,8"/>

                            <CheckBox x:Name="ModeN" Style="{StaticResource ModeToggleStyle}">
                                <TextBlock>
                                    <Run Text="+n" FontWeight="Bold" FontFamily="Consolas" Foreground="{StaticResource AccentBrush}"/>
                                    <Run Text=" — " Foreground="{StaticResource TextMutedBrush}"/>
                                    <Run Text="{loc:Localize Key=ChannelModeEditor_Mode_N}" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </TextBlock>
                            </CheckBox>

                            <CheckBox x:Name="ModeT" Style="{StaticResource ModeToggleStyle}">
                                <TextBlock>
                                    <Run Text="+t" FontWeight="Bold" FontFamily="Consolas" Foreground="{StaticResource AccentBrush}"/>
                                    <Run Text=" — " Foreground="{StaticResource TextMutedBrush}"/>
                                    <Run Text="{loc:Localize Key=ChannelModeEditor_Mode_T}" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </TextBlock>
                            </CheckBox>

                            <CheckBox x:Name="ModeS" Style="{StaticResource ModeToggleStyle}">
                                <TextBlock>
                                    <Run Text="+s" FontWeight="Bold" FontFamily="Consolas" Foreground="{StaticResource AccentBrush}"/>
                                    <Run Text=" — " Foreground="{StaticResource TextMutedBrush}"/>
                                    <Run Text="{loc:Localize Key=ChannelModeEditor_Mode_S}" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </TextBlock>
                            </CheckBox>

                            <CheckBox x:Name="ModeM" Style="{StaticResource ModeToggleStyle}">
                                <TextBlock>
                                    <Run Text="+m" FontWeight="Bold" FontFamily="Consolas" Foreground="{StaticResource AccentBrush}"/>
                                    <Run Text=" — " Foreground="{StaticResource TextMutedBrush}"/>
                                    <Run Text="{loc:Localize Key=ChannelModeEditor_Mode_M}" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </TextBlock>
                            </CheckBox>

                            <CheckBox x:Name="ModeI" Style="{StaticResource ModeToggleStyle}">
                                <TextBlock>
                                    <Run Text="+i" FontWeight="Bold" FontFamily="Consolas" Foreground="{StaticResource AccentBrush}"/>
                                    <Run Text=" — " Foreground="{StaticResource TextMutedBrush}"/>
                                    <Run Text="{loc:Localize Key=ChannelModeEditor_Mode_I}" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </TextBlock>
                            </CheckBox>

                            <CheckBox x:Name="ModeP" Style="{StaticResource ModeToggleStyle}">
                                <TextBlock>
                                    <Run Text="+p" FontWeight="Bold" FontFamily="Consolas" Foreground="{StaticResource AccentBrush}"/>
                                    <Run Text=" — " Foreground="{StaticResource TextMutedBrush}"/>
                                    <Run Text="{loc:Localize Key=ChannelModeEditor_Mode_P}" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </TextBlock>
                            </CheckBox>
                        </StackPanel>
                    </Border>

                    <!-- Parameter modes section -->
                    <Border Background="{StaticResource BackgroundMediumBrush}"
                            CornerRadius="6"
                            Padding="16,12">
                        <StackPanel>
                            <TextBlock Text="{loc:Localize Key=ChannelModeEditor_ParameterModes}"
                                       Foreground="{StaticResource AccentBrush}"
                                       FontWeight="SemiBold"
                                       FontSize="12"
                                       Margin="0,0,0,8"/>

                            <!-- Channel Key (+k) -->
                            <CheckBox x:Name="ModeK" Style="{StaticResource ModeToggleStyle}"
                                      Checked="ModeK_Changed" Unchecked="ModeK_Changed">
                                <TextBlock>
                                    <Run Text="+k" FontWeight="Bold" FontFamily="Consolas" Foreground="{StaticResource AccentBrush}"/>
                                    <Run Text=" — " Foreground="{StaticResource TextMutedBrush}"/>
                                    <Run Text="{loc:Localize Key=ChannelModeEditor_Mode_K}" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </TextBlock>
                            </CheckBox>
                            <TextBox x:Name="KeyInput" 
                                     Style="{StaticResource ModeTextBoxStyle}"
                                     Margin="28,0,0,8"
                                     IsEnabled="{Binding IsChecked, ElementName=ModeK}"/>

                            <!-- Channel Limit (+l) -->
                            <CheckBox x:Name="ModeL" Style="{StaticResource ModeToggleStyle}"
                                      Checked="ModeL_Changed" Unchecked="ModeL_Changed">
                                <TextBlock>
                                    <Run Text="+l" FontWeight="Bold" FontFamily="Consolas" Foreground="{StaticResource AccentBrush}"/>
                                    <Run Text=" — " Foreground="{StaticResource TextMutedBrush}"/>
                                    <Run Text="{loc:Localize Key=ChannelModeEditor_Mode_L}" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </TextBlock>
                            </CheckBox>
                            <TextBox x:Name="LimitInput" 
                                     Style="{StaticResource ModeTextBoxStyle}"
                                     Width="120"
                                     HorizontalAlignment="Left"
                                     Margin="28,0,0,0"
                                     IsEnabled="{Binding IsChecked, ElementName=ModeL}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <Border Grid.Row="3" 
                    Background="{StaticResource BackgroundMediumBrush}"
                    Padding="28,16"
                    CornerRadius="0,0,8,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="1"
                            Content="{loc:Localize Key=Dialog_Cancel}"
                            Width="100"
                            Padding="16,10"
                            Margin="0,0,12,0"
                            Background="Transparent"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            Foreground="{StaticResource TextSecondaryBrush}"
                            Click="CancelButton_Click"/>
                    <Button Grid.Column="2"
                            Content="{loc:Localize Key=Dialog_Apply}"
                            Width="100"
                            Padding="16,10"
                            Background="{StaticResource AccentBrush}"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            Click="ApplyButton_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
