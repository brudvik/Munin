<Window x:Class="Munin.UI.Views.ChannelStatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:Munin.UI.Localization"
        Title="{loc:Localize Key=ChannelStats_Title}" 
        Width="420" Height="500"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="{StaticResource UIFont}"
        FontSize="13"
        ResizeMode="NoResize"
        Icon="/Resources/munin-icon.ico">
    
    <Border Background="{DynamicResource BackgroundDarkBrush}"
            CornerRadius="8"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Custom Title Bar -->
            <Border Grid.Row="0" 
                    Background="{StaticResource BackgroundMediumBrush}"
                    CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="38">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“Š" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{loc:Localize Key=ChannelStats_Title}" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1" 
                            Click="CloseButton_Click"
                            Style="{StaticResource WindowCloseButtonStyle}"
                            ToolTip="{loc:Localize Key=MainWindow_Close}">
                        <Path Data="M0,0 L10,10 M10,0 L0,10" 
                              Stroke="{StaticResource TextSecondaryBrush}" 
                              StrokeThickness="1"
                              Width="10" Height="10"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"/>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Header -->
            <Border Grid.Row="1" 
                    Background="{DynamicResource BackgroundMediumBrush}"
                    BorderBrush="{DynamicResource BorderSubtleBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="20,16">
            <StackPanel Orientation="Horizontal">
                <Border Width="36" Height="36" 
                        CornerRadius="8"
                        Background="{DynamicResource AccentSubtleBrush}"
                        Margin="0,0,14,0">
                    <TextBlock Text="ðŸ“Š" FontSize="18" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding ChannelName}" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource AccentBrush}"/>
                    <TextBlock x:Name="SessionDurationText"
                               Foreground="{DynamicResource TextMutedBrush}"
                               FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </Border>
            
            <!-- Stats Grid -->
            <Grid Grid.Row="2" Margin="20,16,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Border Grid.Column="0" 
                    Background="{DynamicResource BackgroundElevatedBrush}"
                    CornerRadius="8" 
                    Padding="12"
                    Margin="0,0,6,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding TotalMessages}" 
                               FontSize="26" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource AccentBrush}"/>
                    <TextBlock Text="{loc:Localize Key=ChannelStats_Messages}" 
                               FontSize="11" 
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource TextMutedBrush}"/>
                </StackPanel>
            </Border>
            
            <Border Grid.Column="1" 
                    Background="{DynamicResource BackgroundElevatedBrush}"
                    CornerRadius="8" 
                    Padding="12"
                    Margin="3,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding UniqueUsers}" 
                               FontSize="26" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource AccentBrush}"/>
                    <TextBlock Text="{loc:Localize Key=ChannelStats_Chatters}" 
                               FontSize="11" 
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource TextMutedBrush}"/>
                </StackPanel>
            </Border>
            
            <Border Grid.Column="2" 
                    Background="{DynamicResource BackgroundElevatedBrush}"
                    CornerRadius="8" 
                    Padding="12"
                    Margin="6,0,0,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding FormattedMessagesPerMinute}" 
                               FontSize="26" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource AccentBrush}"/>
                    <TextBlock Text="{loc:Localize Key=ChannelStats_MsgsPerMin}" 
                               FontSize="11" 
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource TextMutedBrush}"/>
                </StackPanel>
            </Border>
            </Grid>
            
            <!-- Top Chatters -->
            <Border Grid.Row="3" 
                    Background="{DynamicResource BackgroundElevatedBrush}"
                    CornerRadius="8"
                    Padding="16"
                    Margin="20,16,20,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                           Text="{loc:Localize Key=ChannelStats_TopChatters}" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           Margin="0,0,0,12"/>
                
                <ItemsControl Grid.Row="1" x:Name="TopChattersItems">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                           Text="{Binding Rank, StringFormat='#{0}'}"
                                           Foreground="{DynamicResource TextMutedBrush}"
                                           FontFamily="{StaticResource MonospaceFont}"/>
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding Nickname}"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <Border Grid.Column="2"
                                        Background="{DynamicResource AccentSubtleBrush}"
                                        CornerRadius="8"
                                        Padding="8,2">
                                    <TextBlock Text="{Binding Count, StringFormat='{}{0}'}"
                                               FontSize="11"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource AccentBrush}"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
            </Border>
            
            <!-- Close Button -->
            <Border Grid.Row="4"
                    BorderBrush="{DynamicResource BorderSubtleBrush}"
                    BorderThickness="0,1,0,0"
                    Margin="0,16,0,0"
                    Padding="20,16">
                <Button Content="{loc:Localize Key=Common_Close}" 
                        Padding="24,10"
                        HorizontalAlignment="Center"
                        Style="{StaticResource AccentButtonStyle}"
                        Click="CloseButton_Click"/>
            </Border>
        </Grid>
    </Border>
</Window>
