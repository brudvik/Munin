<Window x:Class="Munin.UI.Views.ChannelStatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:Munin.UI.Localization"
        Title="{loc:Localize Key=ChannelStats_Title}" 
        Width="400" Height="450"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundDarkBrush}"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="{Binding ChannelName}" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="{DynamicResource AccentBrush}"/>
            <TextBlock x:Name="SessionDurationText"
                       Foreground="{DynamicResource TextMutedBrush}"
                       FontSize="12"/>
        </StackPanel>
        
        <!-- Stats Grid -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Border Grid.Column="0" 
                    Background="{DynamicResource BackgroundMediumBrush}"
                    CornerRadius="8" 
                    Padding="12"
                    Margin="0,0,8,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding TotalMessages}" 
                               FontSize="28" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource AccentBrush}"/>
                    <TextBlock Text="{loc:Localize Key=ChannelStats_Messages}" 
                               FontSize="12" 
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource TextMutedBrush}"/>
                </StackPanel>
            </Border>
            
            <Border Grid.Column="1" 
                    Background="{DynamicResource BackgroundMediumBrush}"
                    CornerRadius="8" 
                    Padding="12"
                    Margin="4,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding UniqueUsers}" 
                               FontSize="28" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource AccentBrush}"/>
                    <TextBlock Text="{loc:Localize Key=ChannelStats_Chatters}" 
                               FontSize="12" 
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource TextMutedBrush}"/>
                </StackPanel>
            </Border>
            
            <Border Grid.Column="2" 
                    Background="{DynamicResource BackgroundMediumBrush}"
                    CornerRadius="8" 
                    Padding="12"
                    Margin="8,0,0,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding FormattedMessagesPerMinute}" 
                               FontSize="28" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource AccentBrush}"/>
                    <TextBlock Text="{loc:Localize Key=ChannelStats_MsgsPerMin}" 
                               FontSize="12" 
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource TextMutedBrush}"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Top Chatters -->
        <Border Grid.Row="2" 
                Background="{DynamicResource BackgroundMediumBrush}"
                CornerRadius="8"
                Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                           Text="{loc:Localize Key=ChannelStats_TopChatters}" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,12"/>
                
                <ItemsControl Grid.Row="1" x:Name="TopChattersItems">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                           Text="{Binding Rank, StringFormat='#{0}'}"
                                           Foreground="{DynamicResource TextMutedBrush}"/>
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding Nickname}"
                                           FontWeight="Medium"/>
                                <TextBlock Grid.Column="2" 
                                           Text="{Binding Count, StringFormat='{}{0} msgs'}"
                                           Foreground="{DynamicResource AccentBrush}"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>
        
        <!-- Close Button -->
        <Button Grid.Row="3" 
                Content="{loc:Localize Key=Common_Close}" 
                Margin="0,20,0,0"
                Padding="20,8"
                HorizontalAlignment="Center"
                Click="CloseButton_Click"/>
    </Grid>
</Window>
