<Window x:Class="Munin.UI.Views.WhoisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:Munin.UI.Localization"
        Title="{loc:Localize Key=UserInfo_Title}"
        Height="300"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundDarkBrush}"
        Foreground="{StaticResource TextPrimaryBrush}"
        FontFamily="{StaticResource MonospaceFont}">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
            <TextBlock Text="ðŸ‘¤" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
            <TextBlock x:Name="NicknameText" 
                       FontSize="18" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Info -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="InfoText"
                       TextWrapping="Wrap"
                       Foreground="{StaticResource TextSecondaryBrush}"/>
        </ScrollViewer>

        <!-- Close button -->
        <Button Grid.Row="2" 
                Content="{loc:Localize Key=Common_Close}" 
                HorizontalAlignment="Right"
                Margin="0,16,0,0"
                Padding="20,8"
                Style="{StaticResource AccentButtonStyle}"
                Click="CloseButton_Click"/>
    </Grid>
</Window>
