<Window x:Class="Munin.UI.Views.AddServerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:Munin.UI.Localization"
        Title="{loc:Localize Key=AddServer_Title}" 
        Height="720" 
        Width="480"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent"
        Foreground="{StaticResource TextPrimaryBrush}"
        FontFamily="{StaticResource UIFont}"
        FontSize="13">

    <Border Background="{StaticResource BackgroundDarkBrush}"
            CornerRadius="8"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" 
                    Background="{StaticResource BackgroundMediumBrush}"
                    CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="38">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="ðŸŒ" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{loc:Localize Key=AddServer_Title}" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1" 
                            Click="CloseButton_Click"
                            Style="{StaticResource WindowCloseButtonStyle}"
                            ToolTip="{loc:Localize Key=MainWindow_Close}">
                        <Path Data="M0,0 L10,10 M10,0 L0,10" 
                              Stroke="{StaticResource TextSecondaryBrush}" 
                              StrokeThickness="1"
                              Width="10" Height="10"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Header -->
            <StackPanel Grid.Row="1" Margin="28,20,28,20">
                <StackPanel Orientation="Horizontal">
                    <Border Background="{StaticResource AccentSubtleBrush}"
                            CornerRadius="8"
                            Padding="10,8"
                            Margin="0,0,14,0">
                        <TextBlock Text="ðŸŒ" FontSize="20"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="{loc:Localize Key=AddServer_Header}" 
                                   FontSize="22" 
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{loc:Localize Key=AddServer_Description}" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="13"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

        <!-- Form -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="28,0,28,0">
            <StackPanel>
                <!-- Server Name -->
                <TextBlock Text="{loc:Localize Key=AddServer_ServerName}" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12"
                           FontWeight="Medium"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="ServerNameTextBox" 
                         Text="Libera.Chat"
                         Margin="0,0,0,18"/>

                <!-- Hostname -->
                <TextBlock Text="{loc:Localize Key=AddServer_Hostname}" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12"
                           FontWeight="Medium"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="HostnameTextBox" 
                         Text="irc.libera.chat"
                         Margin="0,0,0,18"/>

                <!-- Port and SSL -->
                <Grid Margin="0,0,0,18">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="{loc:Localize Key=AddServer_Port}" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"/>
                        <TextBox x:Name="PortTextBox" Text="6697"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="{loc:Localize Key=AddServer_Security}" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"/>
                        <CheckBox x:Name="UseSslCheckBox" 
                                  Content="{loc:Localize Key=AddServer_UseSSL}" 
                                  IsChecked="True"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  VerticalAlignment="Center"
                                  Margin="0,6,0,0"/>
                        <CheckBox x:Name="AcceptInvalidCertsCheckBox" 
                                  Content="{loc:Localize Key=AddServer_AcceptInvalidCerts}" 
                                  IsChecked="False"
                                  Checked="AcceptInvalidCertsCheckBox_Checked"
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  VerticalAlignment="Center"
                                  ToolTip="{loc:Localize Key=AddServer_AcceptInvalidCertsTooltip}"
                                  Margin="0,8,0,0"
                                  IsEnabled="{Binding IsChecked, ElementName=UseSslCheckBox}"/>
                        <CheckBox x:Name="PreferIPv6CheckBox" 
                                  Content="{loc:Localize Key=AddServer_PreferIPv6}" 
                                  IsChecked="False"
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  VerticalAlignment="Center"
                                  ToolTip="{loc:Localize Key=AddServer_PreferIPv6Tooltip}"
                                  Margin="0,8,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- Nickname -->
                <TextBlock Text="{loc:Localize Key=AddServer_Nickname}" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12"
                           FontWeight="Medium"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="NicknameTextBox" 
                         Margin="0,0,0,18"/>

                <!-- Username -->
                <TextBlock Text="{loc:Localize Key=AddServer_Username}" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12"
                           FontWeight="Medium"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="UsernameTextBox" 
                         Text="ircclient"
                         Margin="0,0,0,18"/>

                <!-- Real Name -->
                <TextBlock Text="{loc:Localize Key=AddServer_RealName}" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12"
                           FontWeight="Medium"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="RealNameTextBox" 
                         Text="IRC Client User"
                         Margin="0,0,0,18"/>

                <!-- Auto-Join Channels -->
                <TextBlock Text="{loc:Localize Key=AddServer_Channels}" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12"
                           FontWeight="Medium"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="AutoJoinTextBox" 
                         Text="#test"
                         Margin="0,0,0,18"/>

                <!-- Server Password -->
                <TextBlock Text="{loc:Localize Key=AddServer_ServerPasswordOptional}" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12"
                           FontWeight="Medium"
                           Margin="0,0,0,8"/>
                <PasswordBox x:Name="PasswordBox" 
                             Margin="0,0,0,24"/>

                <!-- SASL Authentication Section -->
                <Border Background="{StaticResource BackgroundMediumBrush}"
                        CornerRadius="8"
                        Padding="16"
                        Margin="0,0,0,18">
                    <StackPanel>
                        <TextBlock Text="{loc:Localize Key=AddServer_SaslHeader}" 
                                   FontWeight="SemiBold"
                                   FontSize="13"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,12"/>
                        
                        <TextBlock Text="{loc:Localize Key=AddServer_SaslUsername}" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"
                                   Margin="0,0,0,8"/>
                        <TextBox x:Name="SaslUsernameTextBox" 
                                 Margin="0,0,0,14"/>

                        <TextBlock Text="{loc:Localize Key=AddServer_SaslPassword}" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"
                                   Margin="0,0,0,8"/>
                        <PasswordBox x:Name="SaslPasswordBox"/>
                    </StackPanel>
                </Border>

                <!-- Auto-connect -->
                <!-- MuninRelay Section -->
                <Border Background="{StaticResource BackgroundMediumBrush}"
                        CornerRadius="8"
                        Padding="16"
                        Margin="0,0,0,18">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="ðŸ”€" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="{loc:Localize Key=AddServer_RelayHeader}" 
                                       FontWeight="SemiBold"
                                       FontSize="13"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                        
                        <TextBlock Text="{loc:Localize Key=AddServer_RelayDescription}" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,12"/>
                        
                        <CheckBox x:Name="RelayEnabledCheckBox" 
                                  Content="{loc:Localize Key=AddServer_RelayEnabled}" 
                                  IsChecked="False"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Margin="0,0,0,12"/>
                        
                        <StackPanel x:Name="RelaySettingsPanel" 
                                    Visibility="{Binding IsChecked, ElementName=RelayEnabledCheckBox, Converter={StaticResource BoolToVisibilityConverter}}">
                            
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="{loc:Localize Key=AddServer_RelayHost}" 
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="12"
                                               Margin="0,0,0,6"/>
                                    <TextBox x:Name="RelayHostTextBox" 
                                             ToolTip="{loc:Localize Key=AddServer_RelayHostTooltip}"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="{loc:Localize Key=AddServer_RelayPort}" 
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="12"
                                               Margin="0,0,0,6"/>
                                    <TextBox x:Name="RelayPortTextBox" Text="6900"/>
                                </StackPanel>
                            </Grid>
                            
                            <TextBlock Text="{loc:Localize Key=AddServer_RelayAuthToken}" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="12"
                                       Margin="0,0,0,6"/>
                            <PasswordBox x:Name="RelayAuthTokenBox" 
                                         ToolTip="{loc:Localize Key=AddServer_RelayAuthTokenTooltip}"
                                         Margin="0,0,0,12"/>
                            
                            <CheckBox x:Name="RelayUseSslCheckBox" 
                                      Content="{loc:Localize Key=AddServer_RelayUseSsl}" 
                                      IsChecked="True"
                                      Foreground="{StaticResource TextSecondaryBrush}"
                                      Margin="0,0,0,6"/>
                            
                            <CheckBox x:Name="RelayAcceptInvalidCertsCheckBox" 
                                      Content="{loc:Localize Key=AddServer_RelayAcceptInvalidCerts}" 
                                      IsChecked="True"
                                      Foreground="{StaticResource TextSecondaryBrush}"
                                      IsEnabled="{Binding IsChecked, ElementName=RelayUseSslCheckBox}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Auto-connect -->
                <CheckBox x:Name="AutoConnectCheckBox" 
                          Content="{loc:Localize Key=AddServer_AutoConnect}" 
                          IsChecked="False"
                          Margin="0,0,0,8"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="3" 
                BorderBrush="{StaticResource BorderSubtleBrush}"
                BorderThickness="0,1,0,0"
                Padding="28,16">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button Content="{loc:Localize Key=Cancel}" 
                        Click="CancelButton_Click"
                        Padding="20,10"
                        Margin="0,0,12,0"/>
                <Button Click="AddButton_Click"
                        Style="{StaticResource AccentButtonStyle}"
                        Padding="24,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ï¼‹" FontWeight="Bold" Margin="0,0,8,0"/>
                        <TextBlock Text="{loc:Localize Key=AddServer_Title}"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
        </Grid>
    </Border>
</Window>
