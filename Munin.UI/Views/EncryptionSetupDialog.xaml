<Window x:Class="Munin.UI.Views.EncryptionSetupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:Munin.UI.Resources"
        Title="{x:Static res:Strings.EncryptionSetup_Title}" 
        Height="650" Width="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1e1e1e">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="#2d2d2d"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="BorderBrush" Value="#3d3d3d"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#0078d4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ”" FontSize="48" HorizontalAlignment="Center"/>
            <TextBlock Text="{x:Static res:Strings.EncryptionSetup_Header}" FontSize="20" FontWeight="SemiBold" 
                       HorizontalAlignment="Center" Margin="0,10,0,5"/>
            <TextBlock Text="{x:Static res:Strings.EncryptionSetup_Description}" 
                       HorizontalAlignment="Center" Foreground="#888"/>
        </StackPanel>
        
        <!-- Content -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <!-- Info box -->
            <Border Background="#2a3a4a" CornerRadius="6" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="ðŸ›¡ï¸ " FontWeight="SemiBold"/>
                        <TextBlock Text="{x:Static res:Strings.EncryptionSetup_WillBeEncrypted}" FontWeight="SemiBold"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="15,2,0,0">
                        <TextBlock Text="â€¢ "/>
                        <TextBlock Text="{x:Static res:Strings.EncryptionSetup_ServerConfigs}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="15,2,0,0">
                        <TextBlock Text="â€¢ "/>
                        <TextBlock Text="{x:Static res:Strings.EncryptionSetup_NickServSasl}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="15,2,0,0">
                        <TextBlock Text="â€¢ "/>
                        <TextBlock Text="{x:Static res:Strings.EncryptionSetup_ChatHistory}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="15,2,0,0">
                        <TextBlock Text="â€¢ "/>
                        <TextBlock Text="{x:Static res:Strings.EncryptionSetup_AllSettings}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Password fields -->
            <TextBlock Text="{x:Static res:Strings.EncryptionSetup_CreatePassword}" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,15"/>
            
            <TextBlock Text="{x:Static res:Strings.EncryptionSetup_ConfirmPassword}" Margin="0,0,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,10"/>
            
            <TextBlock x:Name="ErrorText" Foreground="#ff6b6b" Text="" Margin="0,0,0,10" 
                       Visibility="Collapsed"/>
            
            <!-- Warning -->
            <Border Background="#4a3a2a" CornerRadius="6" Padding="12" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="âš ï¸ " Foreground="#ffa500"/>
                    <TextBlock Text="{x:Static res:Strings.EncryptionSetup_Warning}" TextWrapping="Wrap" Foreground="#ffa500"/>
                </StackPanel>
            </Border>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="SkipButton" Content="{x:Static res:Strings.EncryptionSetup_Skip}" Click="SkipButton_Click"
                    Background="#444" Margin="0,0,10,0"/>
            <Button x:Name="EnableButton" Content="{x:Static res:Strings.EncryptionSetup_Enable}" Click="EnableButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
