<Window x:Class="Munin.UI.Views.EncryptionSetupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:Munin.UI.Resources"
        xmlns:loc="clr-namespace:Munin.UI.Localization"
        Title="{x:Static res:Strings.EncryptionSetup_Title}" 
        Height="680" Width="540"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="{StaticResource UIFont}"
        Icon="/Resources/munin-icon.ico">
    
    <Border Background="{DynamicResource BackgroundDarkBrush}"
            CornerRadius="8"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Custom Title Bar -->
            <Border Grid.Row="0" 
                    Background="{StaticResource BackgroundMediumBrush}"
                    CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="38">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Center">
                        <Image Source="/Resources/munin-logo.png" Width="18" Height="18" VerticalAlignment="Center" Margin="0,0,8,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <TextBlock Text="{x:Static res:Strings.EncryptionSetup_Title}" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1" 
                            Click="CloseButton_Click"
                            Style="{StaticResource WindowCloseButtonStyle}"
                            ToolTip="{loc:Localize Key=MainWindow_Close}">
                        <Path Data="M0,0 L10,10 M10,0 L0,10" 
                              Stroke="{StaticResource TextSecondaryBrush}" 
                              StrokeThickness="1"
                              Width="10" Height="10"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"/>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Header -->
            <Border Grid.Row="1" 
                    Background="{DynamicResource BackgroundMediumBrush}"
                    Padding="30,24">
                <StackPanel HorizontalAlignment="Center">
                    <Border Width="72" Height="72" 
                            CornerRadius="36"
                            Background="{DynamicResource AccentSubtleBrush}"
                            Margin="0,0,0,16">
                        <Image Source="/Resources/munin-logo.png" 
                               Width="48" Height="48" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Border>
                    <TextBlock Text="{x:Static res:Strings.EncryptionSetup_Header}" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{x:Static res:Strings.EncryptionSetup_Description}" 
                               HorizontalAlignment="Center" 
                               Foreground="{DynamicResource TextMutedBrush}"
                               FontSize="13"
                               Margin="0,6,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Content -->
            <StackPanel Grid.Row="2" Margin="30,20,30,0">
            <!-- Info box -->
            <Border Background="{DynamicResource AccentSubtleBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="ðŸ›¡ï¸" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock Text="{x:Static res:Strings.EncryptionSetup_WillBeEncrypted}" 
                                   FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                    </StackPanel>
                    <StackPanel Margin="26,0,0,0">
                        <TextBlock Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,3">
                            <Run Text="â€¢"/>
                            <Run Text="{x:Static res:Strings.EncryptionSetup_ServerConfigs}"/>
                        </TextBlock>
                        <TextBlock Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,3">
                            <Run Text="â€¢"/>
                            <Run Text="{x:Static res:Strings.EncryptionSetup_NickServSasl}"/>
                        </TextBlock>
                        <TextBlock Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,3">
                            <Run Text="â€¢"/>
                            <Run Text="{x:Static res:Strings.EncryptionSetup_ChatHistory}"/>
                        </TextBlock>
                        <TextBlock Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,3">
                            <Run Text="â€¢"/>
                            <Run Text="{x:Static res:Strings.EncryptionSetup_AllSettings}"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Password fields -->
            <Border Background="{DynamicResource BackgroundElevatedBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="{x:Static res:Strings.EncryptionSetup_CreatePassword}" 
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontSize="12"
                               Margin="0,0,0,6"/>
                    <PasswordBox x:Name="PasswordBox" Margin="0,0,0,16"/>
                    
                    <TextBlock Text="{x:Static res:Strings.EncryptionSetup_ConfirmPassword}" 
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontSize="12"
                               Margin="0,0,0,6"/>
                    <PasswordBox x:Name="ConfirmPasswordBox"/>
                    
                    <TextBlock x:Name="ErrorText" 
                               Foreground="{DynamicResource ErrorBrush}" 
                               Text="" 
                               Margin="0,12,0,0" 
                               Visibility="Collapsed"/>
                </StackPanel>
            </Border>
            
            <!-- Warning -->
            <Border Background="{DynamicResource WarningDimBrush}" CornerRadius="8" Padding="14">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="âš ï¸" FontSize="14" Margin="0,0,10,0"/>
                    <TextBlock Text="{x:Static res:Strings.EncryptionSetup_Warning}" 
                               TextWrapping="Wrap" 
                               Foreground="{DynamicResource WarningBrush}"
                               FontSize="12"/>
                </StackPanel>
            </Border>
            </StackPanel>
            
            <!-- Buttons -->
            <Border Grid.Row="3"
                    BorderBrush="{DynamicResource BorderSubtleBrush}"
                    BorderThickness="0,1,0,0"
                    Margin="0,16,0,0"
                    Padding="30,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="SkipButton" Content="{x:Static res:Strings.EncryptionSetup_Skip}" Click="SkipButton_Click"
                            Padding="20,10" Margin="0,0,12,0"/>
                    <Button x:Name="EnableButton" Content="{x:Static res:Strings.EncryptionSetup_Enable}" Click="EnableButton_Click"
                            Style="{StaticResource AccentButtonStyle}" Padding="20,10"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
