<Window x:Class="Munin.UI.Views.UserProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:Munin.UI.Localization"
        Title="{loc:Localize Key=UserProfile_Title}" 
        Width="400" Height="440"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="{StaticResource UIFont}"
        FontSize="13"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>
    </Window.Resources>
    
    <Border Background="{DynamicResource BackgroundDarkBrush}"
            CornerRadius="8"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Custom Title Bar -->
            <Border Grid.Row="0" 
                    Background="{StaticResource BackgroundMediumBrush}"
                    CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="38">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ‘¤" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{loc:Localize Key=UserProfile_Title}" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1" 
                            Click="CloseButton_Click"
                            Style="{StaticResource WindowCloseButtonStyle}"
                            ToolTip="{loc:Localize Key=MainWindow_Close}">
                        <Path Data="M0,0 L10,10 M10,0 L0,10" 
                              Stroke="{StaticResource TextSecondaryBrush}" 
                              StrokeThickness="1"
                              Width="10" Height="10"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"/>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Header with avatar and nickname -->
            <Border Grid.Row="1" 
                    Background="{DynamicResource BackgroundMediumBrush}"
                    BorderBrush="{DynamicResource BorderSubtleBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="20,16">
            <StackPanel Orientation="Horizontal">
                <Border Width="56" Height="56" CornerRadius="28" Margin="0,0,16,0"
                        BorderBrush="{DynamicResource AccentBrush}"
                        BorderThickness="2">
                    <Border CornerRadius="26">
                        <Border.Background>
                            <ImageBrush x:Name="AvatarBrush" Stretch="UniformToFill"/>
                        </Border.Background>
                    </Border>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="NicknameText" FontSize="20" FontWeight="SemiBold" Foreground="{DynamicResource AccentBrush}"/>
                    <TextBlock x:Name="UserHostText" FontSize="11" Foreground="{DynamicResource TextMutedBrush}" FontFamily="{StaticResource MonospaceFont}" Margin="0,2,0,0"/>
                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                        <Border CornerRadius="4"
                                Background="{DynamicResource SuccessDimBrush}"
                                Padding="8,3">
                            <TextBlock x:Name="StatusBadge" Text="ðŸŸ¢ Online" FontSize="11" FontWeight="Medium" Foreground="{DynamicResource SuccessBrush}"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
            
            <!-- Info Grid -->
            <Border Grid.Row="2" 
                    Background="{DynamicResource BackgroundElevatedBrush}"
                    CornerRadius="8"
                    Padding="16"
                    Margin="20,16,20,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Real Name -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="{loc:Localize Key=UserProfile_RealName}" Foreground="{DynamicResource TextMutedBrush}" FontSize="12" Margin="0,6"/>
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="RealNameText" Margin="0,6" TextWrapping="Wrap"/>
                
                <!-- Server -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="{loc:Localize Key=UserProfile_Server}" Foreground="{DynamicResource TextMutedBrush}" FontSize="12" Margin="0,6"/>
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="ServerText" Margin="0,6" FontFamily="{StaticResource MonospaceFont}"/>
                
                <!-- Account -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="{loc:Localize Key=UserProfile_Account}" Foreground="{DynamicResource TextMutedBrush}" FontSize="12" Margin="0,6"/>
                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="AccountText" Margin="0,6"/>
                
                <!-- Idle -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="{loc:Localize Key=UserProfile_Status}" Foreground="{DynamicResource TextMutedBrush}" FontSize="12" Margin="0,6"/>
                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="IdleText" Margin="0,6"/>
                
                <!-- Signon -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="{loc:Localize Key=UserProfile_Connected}" Foreground="{DynamicResource TextMutedBrush}" FontSize="12" Margin="0,6"/>
                <TextBlock Grid.Row="4" Grid.Column="1" x:Name="SignonText" Margin="0,6"/>
                
                <!-- Away -->
                <TextBlock Grid.Row="5" Grid.Column="0" Text="{loc:Localize Key=UserProfile_Away}" Foreground="{DynamicResource TextMutedBrush}" FontSize="12" Margin="0,6"
                           x:Name="AwayLabel" Visibility="Collapsed"/>
                <TextBlock Grid.Row="5" Grid.Column="1" x:Name="AwayText" Margin="0,6" Visibility="Collapsed" 
                           TextWrapping="Wrap" Foreground="{DynamicResource WarningBrush}"/>
                
                <!-- Channels -->
                <TextBlock Grid.Row="6" Grid.Column="0" Text="{loc:Localize Key=UserProfile_Channels}" Foreground="{DynamicResource TextMutedBrush}" FontSize="12" Margin="0,10,0,6"/>
                <TextBlock Grid.Row="6" Grid.Column="1" x:Name="ChannelsText" Margin="0,10,0,6" TextWrapping="Wrap" FontSize="11" FontFamily="{StaticResource MonospaceFont}"/>
            </Grid>
            </Border>
            
            <!-- Loading / Buttons -->
            <Border Grid.Row="3"
                    BorderBrush="{DynamicResource BorderSubtleBrush}"
                    BorderThickness="0,1,0,0"
                    Margin="0,16,0,0"
                    Padding="20,16">
                <Grid>
                    <TextBlock x:Name="LoadingText" Text="{loc:Localize Key=Common_Loading}" HorizontalAlignment="Center" Visibility="Collapsed"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" x:Name="ButtonsPanel">
                        <Button Content="{loc:Localize Key=MainWindow_SendPrivateMessage}" Margin="0,0,12,0" Padding="18,10" Click="SendMessage_Click" Style="{StaticResource AccentButtonStyle}"/>
                        <Button Content="{loc:Localize Key=Common_Close}" Padding="18,10" Click="Close_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
