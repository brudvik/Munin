<Window x:Class="Munin.UI.Views.AddAgentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:loc="clr-namespace:Munin.UI.Localization"
        mc:Ignorable="d"
        Title="{loc:Localize Key=AddAgentDialog_Title}" 
        Height="480" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Style="{StaticResource ChromelessWindowStyle}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="{loc:Localize Key=AddAgentDialog_Title}" 
                       FontSize="20" 
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource ForegroundBrush}"/>
            <TextBlock Text="{loc:Localize Key=AddAgentDialog_Description}" 
                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                       TextWrapping="Wrap"
                       Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Agent Name -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="{loc:Localize Key=AddAgentDialog_Name}" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               Margin="0,0,0,6"/>
                    <TextBox x:Name="AgentNameBox"
                             Text="{Binding AgentName, UpdateSourceTrigger=PropertyChanged}"
                             Padding="10,8"
                             FontSize="14"/>
                </StackPanel>

                <!-- Host -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="{loc:Localize Key=AddAgentDialog_Host}" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               Margin="0,0,0,6"/>
                    <TextBox Text="{Binding Host, UpdateSourceTrigger=PropertyChanged}"
                             Padding="10,8"
                             FontSize="14"/>
                    <TextBlock Text="{loc:Localize Key=AddAgentDialog_HostHint}" 
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               FontSize="11"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Port -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="{loc:Localize Key=AddAgentDialog_Port}" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               Margin="0,0,0,6"/>
                    <TextBox Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}"
                             Padding="10,8"
                             FontSize="14"
                             Width="100"
                             HorizontalAlignment="Left"/>
                </StackPanel>

                <!-- Use TLS -->
                <StackPanel Margin="0,0,0,16">
                    <CheckBox IsChecked="{Binding UseTls}"
                              Foreground="{DynamicResource ForegroundBrush}">
                        <TextBlock Text="{loc:Localize Key=AddAgentDialog_UseTls}"/>
                    </CheckBox>
                </StackPanel>

                <!-- Auth Token -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="{loc:Localize Key=AddAgentDialog_AuthToken}" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               Margin="0,0,0,6"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <PasswordBox x:Name="AuthTokenBox"
                                     Padding="10,8"
                                     FontSize="14"
                                     PasswordChanged="AuthTokenBox_PasswordChanged"/>
                        <Button Grid.Column="1" 
                                Content="ðŸ“‹" 
                                Width="36"
                                Margin="8,0,0,0"
                                ToolTip="{loc:Localize Key=AddAgentDialog_PasteToken}"
                                Click="PasteToken_Click"
                                Style="{StaticResource IconButtonStyle}"/>
                    </Grid>
                    <TextBlock Text="{loc:Localize Key=AddAgentDialog_AuthTokenHint}" 
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               FontSize="11"
                               TextWrapping="Wrap"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Test Connection -->
                <StackPanel Margin="0,0,0,16">
                    <Button Content="{loc:Localize Key=AddAgentDialog_TestConnection}"
                            Click="TestConnection_Click"
                            Padding="16,10"
                            HorizontalAlignment="Left"/>
                    <TextBlock x:Name="TestResultText"
                               Margin="0,8,0,0"
                               FontSize="12"/>
                </StackPanel>

                <!-- Save credentials option -->
                <StackPanel Margin="0,0,0,8">
                    <CheckBox IsChecked="{Binding SaveCredentials}"
                              Foreground="{DynamicResource ForegroundBrush}">
                        <TextBlock Text="{loc:Localize Key=AddAgentDialog_SaveCredentials}"/>
                    </CheckBox>
                    <TextBlock Text="{loc:Localize Key=AddAgentDialog_SaveCredentialsHint}" 
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               FontSize="11"
                               TextWrapping="Wrap"
                               Margin="20,4,0,0"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,24,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" 
                    Content="{loc:Localize Key=AddAgentDialog_Cancel}"
                    IsCancel="True"
                    Padding="20,10"
                    MinWidth="80"
                    Margin="0,0,8,0"
                    Click="Cancel_Click"/>
            <Button Grid.Column="2" 
                    Content="{loc:Localize Key=AddAgentDialog_Add}"
                    IsDefault="True"
                    Padding="20,10"
                    MinWidth="80"
                    Click="Add_Click"
                    Style="{StaticResource AccentButtonStyle}"/>
        </Grid>
    </Grid>
</Window>
