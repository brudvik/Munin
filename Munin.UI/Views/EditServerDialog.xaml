<Window x:Class="Munin.UI.Views.EditServerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:Munin.UI.Localization"
        Title="{loc:Localize Key=EditServer_Title}" 
        Height="740" 
        Width="480"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent"
        Foreground="{StaticResource TextPrimaryBrush}"
        FontFamily="{StaticResource UIFont}"
        FontSize="13">

    <Border Background="{StaticResource BackgroundDarkBrush}"
            CornerRadius="8"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" 
                    Background="{StaticResource BackgroundMediumBrush}"
                    CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="38">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="✏️" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{loc:Localize Key=EditServer_Title}" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1" 
                            Click="CloseButton_Click"
                            Style="{StaticResource WindowCloseButtonStyle}"
                            ToolTip="{loc:Localize Key=MainWindow_Close}">
                        <Path Data="M0,0 L10,10 M10,0 L0,10" 
                              Stroke="{StaticResource TextSecondaryBrush}" 
                              StrokeThickness="1"
                              Width="10" Height="10"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Header -->
            <Border Grid.Row="1" 
                    Background="{StaticResource BackgroundMediumBrush}"
                    BorderBrush="{StaticResource BorderSubtleBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="24,18">
                <StackPanel Orientation="Horizontal">
                    <Border Width="40" Height="40" 
                            CornerRadius="8"
                            Background="{StaticResource AccentSubtleBrush}"
                            Margin="0,0,16,0">
                        <TextBlock Text="✏️" FontSize="18" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="{loc:Localize Key=EditServer_Header}" 
                                   FontSize="17" 
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{loc:Localize Key=EditServer_Description}" 
                                   Foreground="{StaticResource TextMutedBrush}"
                                   FontSize="12"
                                   Margin="0,3,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Form -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="24,20,24,0">
            <StackPanel>
                <!-- Server Name -->
                <TextBlock Text="{loc:Localize Key=AddServer_ServerName}" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="ServerNameTextBox" 
                         Margin="0,0,0,16"/>

                <!-- Hostname -->
                <TextBlock Text="{loc:Localize Key=AddServer_Hostname}" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="HostnameTextBox" 
                         Margin="0,0,0,16"/>

                <!-- Port and SSL -->
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                        <TextBlock Text="{loc:Localize Key=AddServer_Port}" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"
                                   Margin="0,0,0,6"/>
                        <TextBox x:Name="PortTextBox"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                        <TextBlock Text="{loc:Localize Key=AddServer_Security}" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"
                                   Margin="0,0,0,6"/>
                        <CheckBox x:Name="UseSslCheckBox" 
                                  Content="{loc:Localize Key=AddServer_UseSSL}" 
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  VerticalAlignment="Center"
                                  Margin="0,8,0,0"/>
                        <CheckBox x:Name="AcceptInvalidCertsCheckBox" 
                                  Content="{loc:Localize Key=AddServer_AcceptInvalidCerts}" 
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  VerticalAlignment="Center"
                                  ToolTip="{loc:Localize Key=AddServer_AcceptInvalidCertsTooltip}"
                                  Margin="0,6,0,0"
                                  IsEnabled="{Binding IsChecked, ElementName=UseSslCheckBox}"/>
                        <CheckBox x:Name="PreferIPv6CheckBox" 
                                  Content="{loc:Localize Key=AddServer_PreferIPv6}" 
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  VerticalAlignment="Center"
                                  ToolTip="{loc:Localize Key=AddServer_PreferIPv6Tooltip}"
                                  Margin="0,6,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- Nickname -->
                <TextBlock Text="{loc:Localize Key=AddServer_Nickname}" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="NicknameTextBox" 
                         Margin="0,0,0,16"/>

                <!-- Username -->
                <TextBlock Text="{loc:Localize Key=AddServer_Username}" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="UsernameTextBox" 
                         Margin="0,0,0,16"/>

                <!-- Real Name -->
                <TextBlock Text="{loc:Localize Key=AddServer_RealName}" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="RealNameTextBox" 
                         Margin="0,0,0,16"/>

                <!-- Server Password -->
                <TextBlock Text="{loc:Localize Key=AddServer_ServerPasswordOptional}" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12"
                           Margin="0,0,0,6"/>
                <PasswordBox x:Name="PasswordBox" 
                             Margin="0,0,0,16"/>

                <!-- NickServ Password -->
                <TextBlock Text="{loc:Localize Key=EditServer_NickServPassword}" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12"
                           Margin="0,0,0,6"/>
                <PasswordBox x:Name="NickServPasswordBox" 
                             Margin="0,0,0,16"/>

                <!-- SASL Authentication -->
                <Border Background="{StaticResource BackgroundElevatedBrush}"
                        CornerRadius="8"
                        Padding="16"
                        Margin="0,8,0,16">
                    <StackPanel>
                        <TextBlock Text="{loc:Localize Key=AddServer_SaslHeader}" 
                                   FontWeight="SemiBold"
                                   FontSize="13"
                                   Margin="0,0,0,12"/>
                        
                        <TextBlock Text="{loc:Localize Key=AddServer_SaslUsername}" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"
                                   Margin="0,0,0,6"/>
                        <TextBox x:Name="SaslUsernameTextBox" 
                                 Margin="0,0,0,12"/>

                        <TextBlock Text="{loc:Localize Key=AddServer_SaslPassword}" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"
                                   Margin="0,0,0,6"/>
                        <PasswordBox x:Name="SaslPasswordBox"/>
                    </StackPanel>
                </Border>

                <!-- Auto-connect -->
                <CheckBox x:Name="AutoConnectCheckBox" 
                          Content="{loc:Localize Key=AddServer_AutoConnect}" 
                          Foreground="{StaticResource TextSecondaryBrush}"
                          Margin="0,0,0,8"/>
            </StackPanel>
        </ScrollViewer>

            <!-- Buttons -->
            <Border Grid.Row="3"
                    BorderBrush="{StaticResource BorderSubtleBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="24,16">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button Content="{loc:Localize Key=Cancel}" 
                            Click="CancelButton_Click"
                            Padding="20,10"
                            Margin="0,0,12,0"/>
                    <Button Content="{loc:Localize Key=Save}" 
                            Click="SaveButton_Click"
                            Style="{StaticResource AccentButtonStyle}"
                            Padding="24,10"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
